<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/settings_advanced_call_category_audio"
        android:icon="@drawable/ic_settings_equalizer_black_24dp">

        <ListPreference
            app:key="audioCodec"
            app:title="@string/settings_advanced_call_audio_codec"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/settings_advanced_call_category_network"
        android:icon="@drawable/ic_settings_network_cell_black_24dp">

        <ListPreference
            app:key="internalConnectionPreference"
            app:title="@string/settings_advanced_call_call_using"
            app:iconSpaceReserved="false"/>

        <SwitchPreferenceCompat
            app:key="PREF_HAS_3G_ENABLED"
            app:title="@string/settings_advanced_call_use_3g"
            app:summary="@string/settings_advanced_call_use_3g_desc"
            app:defaultValue="true"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/settings_advanced_call_category_sip"
        android:icon="@drawable/ic_settings_dialer_sip_black_24dp">

        <SwitchPreferenceCompat
            app:key="PREF_HAS_TLS_ENABLED"
            app:title="@string/settings_advanced_call_encryption"
            app:summary="@string/settings_advanced_call_encryption_description"
            app:defaultValue="true"
            app:iconSpaceReserved="false"/>

        <SwitchPreferenceCompat
            app:key="PREF_HAS_STUN_ENABLED"
            app:title="@string/settings_advanced_call_stun"
            app:summary="@string/settings_advanced_call_stun_desc"
            app:defaultValue="false"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>

</PreferenceScreen>