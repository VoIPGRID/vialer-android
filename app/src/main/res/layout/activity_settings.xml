<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.voipgrid.vialer.SettingsActivity"
    android:background="@color/background_color">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        app:titleTextColor="@color/settings_text_color_dark"
        android:theme="@style/ToolbarTheme"
        app:popupTheme="@style/ActionBar_Popup" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:progressTint="@color/progress_bar_color"
        android:visibility="invisible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:clipToPadding="false">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/numbers"
                android:textSize="@dimen/settings_text_size"
                android:paddingStart="7dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:fontFamily="sans-serif-medium"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/cardview_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/cardview_padding">

                    <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/AccountTextInputLayoutStyle"
                    android:textColorHint="@color/settings_text_color_dark">

                        <EditText
                            android:id="@+id/account_mobile_number_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:drawableRight="@drawable/ic_mode_edit_white_18dp"
                            android:drawableTint="@color/black"
                            android:textColor="@color/edit_text_disabled_color"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="@string/account_mobile_number_edit_text_hint"
                            android:inputType="phone"
                            android:paddingTop="10dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/AccountTextInputLayoutStyle"
                        android:textColorHint="@color/settings_text_color_dark"
                        android:layout_marginTop="24dp">

                        <EditText
                            android:id="@+id/account_outgoing_number_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:hint="@string/account_outgoing_number_edit_text_hint"
                            android:background="@android:color/transparent"
                            android:paddingTop="10dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/network"
                    android:textSize="@dimen/settings_text_size"
                    android:paddingTop="32dp"
                    android:paddingStart="7dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:fontFamily="sans-serif-medium"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/cardview_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/cardview_padding"
                    android:clipToPadding="false">

                    <Switch
                        android:id="@+id/account_sip_switch"
                        style="@style/AccountTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="4dp"
                        android:paddingEnd="0dp"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:text="@string/account_sip_switch" />

                    <Switch
                        android:id="@+id/use_3g_switch"
                        style="@style/AccountTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="4dp"
                        android:paddingEnd="0dp"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:text="@string/switch_use_3g" />

                    <com.voipgrid.vialer.InterceptingLinearLayout
                        android:id="@+id/connection_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/AccountTextInputLayoutStyle">

                            <TextView
                                android:id="@+id/call_using_edit_text"
                                style="@style/AccountTextInputLayoutStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="4dp"
                                android:paddingEnd="0dp"
                                android:text="@string/choose_network_text" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <Spinner
                            android:id="@+id/call_connection_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="-4dp"
                            android:background="@drawable/background_spinner" />

                    </com.voipgrid.vialer.InterceptingLinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/audio"
                    android:textSize="@dimen/settings_text_size"
                    android:paddingTop="32dp"
                    android:paddingStart="7dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:fontFamily="sans-serif-medium"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/cardview_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/cardview_padding"
                android:clipToPadding="false">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/AccountTextInputLayoutStyle">

                    <TextView
                        android:id="@+id/codec"
                        style="@style/AccountTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="4dp"
                        android:paddingEnd="0dp"
                        android:text="@string/choose_codec_text" />
                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/codec_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-4dp"
                    android:background="@drawable/background_spinner" />

            </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/advanced_settings_title"
                    android:textSize="@dimen/settings_text_size"
                    android:paddingTop="32dp"
                    android:paddingStart="7dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:fontFamily="sans-serif-medium"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/cardview_radius">

                <LinearLayout
                    android:id="@+id/advanced_settings_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/cardview_padding"
                    android:clipToPadding="false"
                    android:visibility="visible">


                    <Switch
                        android:id="@+id/remote_logging_switch"
                        style="@style/AccountTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:text="@string/remote_logging_switch_title" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/remote_logging_id_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:hintTextAppearance="@style/AccountTextInputLayoutStyle">

                        <EditText
                            android:id="@+id/remote_logging_id_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/activity_vertical_margin"
                            android:enabled="true"
                            android:hint="@string/remote_logging_input_hint"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Switch
                        android:id="@+id/tls_switch"
                        style="@style/AccountTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4dp"
                        android:text="@string/advanced_settings_tls_switch" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:text="@string/advanced_settings_tls_description" />

                    <Switch
                        android:id="@+id/stun_switch"
                        style="@style/AccountTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4dp"
                        android:text="@string/advanced_settings_stun_switch" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:text="@string/advanced_settings_stun_description"
                        android:paddingBottom="@dimen/activity_vertical_margin"/>

                    <Switch
                        android:id="@+id/ignore_battery_optimization_switch"
                        style="@style/AccountTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4dp"
                        android:text="@string/ignore_battery_optimization_switch" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:text="@string/ignore_battery_optimization_description"
                        android:paddingBottom="@dimen/activity_vertical_margin"/>

                    <Switch
                        android:id="@+id/use_phones_ringtone_switch"
                        style="@style/AccountTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4dp"
                        android:text="@string/use_phones_ringtone_switch_switch" />

                    <TextView
                        android:id="@+id/use_phones_ringtone_switch_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:text="@string/use_phones_ringtone_switch_description" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
