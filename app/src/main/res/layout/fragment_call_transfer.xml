<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/fragment_call_transfer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <android.support.constraint.ConstraintLayout android:id="@+id/call_transfer_buttons"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="0dp"
                                                 android:layout_marginTop="8dp"
                                                 android:layout_marginBottom="8dp"
                                                 app:layout_constraintBottom_toTopOf="@+id/call_transfer_info_container"
                                                 app:layout_constraintTop_toTopOf="parent"
    >
        <LinearLayout android:id="@+id/linearLayout4"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="8dp"
                      android:layout_marginBottom="8dp"
                      android:gravity="center"
                      android:orientation="vertical"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
                      app:layout_constraintHorizontal_chainStyle="spread"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintVertical_bias="0.9">

            <ImageButton
                android:id="@+id/button_transfer_hangup"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/call_decline_button"
                android:backgroundTint="@color/call_fab_hangup_color"
                android:padding="15dp"
                app:srcCompat="@drawable/ic_call_end_white"
            />
            <TextView style="@style/CallTextViewStyle"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:gravity="center"
                      android:text="@string/call_hangup"
                      android:textSize="18sp"/>
        </LinearLayout>


        <LinearLayout android:id="@+id/linearLayout3"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="8dp"
                      android:layout_marginBottom="8dp"
                      android:gravity="center"
                      android:orientation="vertical"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintHorizontal_chainStyle="spread"
                      app:layout_constraintStart_toEndOf="@+id/linearLayout4"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintVertical_bias="0.9">

            <ImageButton
                android:id="@+id/button_transfer_call"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/call_decline_button"
                android:backgroundTint="@color/call_transfer_color"
                android:padding="15dp"
                app:srcCompat="@drawable/ic_call_transfer"
            />
            <TextView style="@style/CallTextViewStyle"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:gravity="center"
                      android:text="@string/transfer_connect"
                      android:textSize="18sp"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:id="@+id/call_transfer_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin"
        android:visibility="visible" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/call_transfer_status"
            style="@style/CallTransferStatusStyle"
            android:text="@string/call_on_hold"/>

        <TextView
            android:id="@+id/call_transfer_number"
            style="@style/CallTransferStatusStyle"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>