<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/info_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gradient"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/incoming_caller_title"
            style="@style/CallTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:textSize="32sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Ghostbusters" />

        <TextView
            android:id="@+id/incoming_caller_subtitle"
            style="@style/CallTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/incoming_caller_title"
            tools:text="+31 50 446 7828" />

        <TextView
            android:id="@+id/duration_text_view"
            style="@style/CallDurationTextViewStyle"
            android:layout_marginTop="8dp"
            android:background="@drawable/call_duration_error_rounded_background"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/incoming_caller_subtitle"
            tools:text="00:07"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/no_connection_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/tab_content_color"
        app:srcCompat="@drawable/ic_signal_wifi_off"
        app:layout_constraintTop_toBottomOf="@id/info_holder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3"/>

    <TextView
        android:id="@+id/no_connectivity_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="@string/dialer_no_connectivity"
        android:textSize="@dimen/empty_view_message_size"
        android:textColor="@color/onboarding_button_text_color"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/no_connection_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/no_connectivity_subtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="3dp"
        android:text="@string/dialer_no_connectivity_subtext"
        android:textSize="13sp"
        android:textColor="@color/dial_button_chars_color"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/no_connectivity_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/network_call_suggestion"
        android:textSize="13sp"
        android:textColor="@color/dial_button_chars_color"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/no_connectivity_subtext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.voipgrid.vialer.call.HangupButton
        android:id="@+id/button_hangup"
        android:layout_width="@dimen/call_buttons_width"
        android:layout_height="@dimen/call_buttons_height"
        android:layout_marginBottom="@dimen/onboarding_activity_vertical_margin"
        android:background="@drawable/call_decline_button"
        android:backgroundTint="@color/call_fab_hangup_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.000"
        app:srcCompat="@drawable/ic_call_end_white" />

</androidx.constraintlayout.widget.ConstraintLayout>