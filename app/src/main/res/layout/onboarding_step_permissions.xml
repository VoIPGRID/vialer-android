<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cloud_background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/onboarding_activity_horizontal_margin"
    android:paddingTop="@dimen/onboarding_header_padding"
    android:paddingRight="@dimen/onboarding_activity_horizontal_margin">

    <ImageView
        android:id="@+id/iconIv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_call_white"/>

    <TextView
        android:id="@+id/titleTv"
        style="@style/HeaderSubTitleTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_item_padding"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconIv"
        tools:text="Call \nPermission"/>

    <ScrollView
        android:id="@+id/text_justification_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTv"
        app:layout_constraintBottom_toTopOf="@id/denyButton"
        android:layout_marginTop="@dimen/onboarding_top_margin"
        android:layout_marginBottom="@dimen/onboarding_top_margin"
        android:scrollbars="none">

        <TextView
            android:id="@+id/justificationTv"
            style="@style/DescriptionTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/onboarding_permission_microphone_justification"/>

    </ScrollView>

    <Button
        android:id="@+id/denyButton"
        style="@style/ButtonAnchorThickTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/onboarding_activity_margin_bottom"
        android:text="@string/onboarding_deny"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/acceptButton"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/acceptButton"
        style="@style/OnboardingButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/onboarding_activity_margin_bottom"
        android:text="@string/allow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/denyButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>