<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/exit_button"
        style="@style/DialpadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:contentDescription="@null"
        android:padding="10dp"
        android:tint="@color/color_primary"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_close" />

    <ImageButton
        android:id="@+id/encryption_disabled"
        style="@style/DialpadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_vertical_item_padding"
        android:layout_weight="0"
        android:background="@drawable/rounded_button_encryption"
        android:contentDescription="@null"
        android:elevation="8dp"
        android:padding="10dp"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_lock_open" />

    <com.voipgrid.vialer.dialer.DialerEditText
        android:id="@+id/edit_text"
        style="@style/DialpadNumberInput"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:inputType="none"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textIsSelectable="true" />

    <ImageButton
        android:id="@+id/remove_button"
        style="@style/DialpadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:background="@android:color/transparent"
        android:contentDescription="@null"
        android:padding="10dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_correct"
        tools:visibility="visible" />

</LinearLayout>