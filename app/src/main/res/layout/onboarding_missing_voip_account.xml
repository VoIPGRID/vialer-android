<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cloud_background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/onboarding_activity_horizontal_margin"
    android:paddingTop="@dimen/onboarding_header_padding"
    android:paddingRight="@dimen/onboarding_activity_horizontal_margin">

    <ImageView
        android:id="@+id/imageview_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_priority_high"/>

    <TextView
        android:id="@+id/text_title"
        style="@style/HeaderSubTitleTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_item_padding"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_icon"
        android:text="@string/voip_account_missing_title"/>

    <TextView
        android:id="@+id/text_justification"
        style="@style/DescriptionTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/onboarding_top_margin"
        android:paddingBottom="@dimen/onboarding_activity_margin_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title"
        android:text="@string/voip_account_missing_text"/>

    <Button
        android:id="@+id/continueButton"
        style="@style/ButtonAnchorThickTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/onboarding_activity_margin_bottom"
        android:text="@string/onboarding_skip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/setVoipAccountButton"
        app:layout_constraintTop_toBottomOf="@+id/text_justification"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/setVoipAccountButton"
        style="@style/OnboardingButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/onboarding_activity_margin_bottom"
        android:text="@string/set_voip_account_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/continueButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_justification"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>