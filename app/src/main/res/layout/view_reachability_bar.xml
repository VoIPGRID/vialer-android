<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/reachability_bar_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dialer_warning_background"
        android:paddingStart="5dp"
        android:paddingTop="8dp"
        android:paddingEnd="40dp"
        android:paddingBottom="8dp"
        android:text="@string/dialer_warning_voip_disabled"
        android:textAlignment="center"
        android:textColor="@color/dialer_warning_text"
        android:textSize="14sp" />

    <!--make sure you are not using ImageView instead of this-->
    <ImageView
        android:id="@+id/reachability_bar_drawable_info_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/help_icon"
        android:src="@drawable/ic_info_outline_white_24dp" />
</FrameLayout>