<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gradient"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:alpha="0.2"
            android:contentDescription="@null"
            android:scaleType="fitStart"
            android:src="@drawable/vialer_icon_half"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_view_good_day"
            style="@style/Drawer.Header.TextView.GoodDay"
            android:layout_width="match_parent"
            android:text="@string/good_day"
            android:paddingStart="@dimen/activity_horizontal_margin_options_header"
            android:paddingEnd="@dimen/activity_horizontal_margin_options_header"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text_view_name"
            style="@style/Drawer.Header.TextView.Name"
            android:layout_width="match_parent"
            tools:text="Antoine Beauvillain"
            android:paddingStart="@dimen/activity_horizontal_margin_options_header"
            android:paddingEnd="@dimen/activity_horizontal_margin_options_header"
            app:layout_constraintTop_toBottomOf="@id/text_view_good_day"/>

        <TextView
            android:id="@+id/text_view_number"
            style="@style/Drawer.Header.TextView.Number"
            android:layout_width="match_parent"
            android:text="@string/navigation_name_placeholder_text"
            tools:text="+31 4080 80032"
            android:paddingStart="@dimen/activity_horizontal_margin_options_header"
            android:paddingEnd="@dimen/activity_horizontal_margin_options_header"
            app:layout_constraintBottom_toTopOf="@id/text_view_email"/>

        <TextView
            android:id="@+id/text_view_email"
            style="@style/Drawer.Header.TextView.Email"
            android:layout_width="match_parent"
            tools:text="antoine.beauvillain@wearespindle.com"
            android:paddingStart="@dimen/activity_horizontal_margin_options_header"
            android:paddingEnd="@dimen/activity_horizontal_margin_options_header"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        >

        <TextView
            android:id="@+id/dnd_label"
            style="@style/AccountTextInputLayoutStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="30dp"
            android:text="@string/availability_on"
            android:textColor="@color/availability_available_text"
            app:layout_constraintEnd_toStartOf="@+id/dnd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/dnd"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingVertical="5dp"
            android:background="@drawable/pill_bg"
            android:layout_marginStart="20sp"
            />

        <com.polyak.iconswitch.IconSwitch
            android:id="@+id/dnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toRightOf="@id/dnd_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:isw_icon_left="@drawable/ic_logo"
            app:isw_icon_right="@drawable/ic_baseline_notifications_off_24"
            app:isw_thumb_color_left="@color/availability_available_text"
            app:isw_thumb_color_right="@color/availability_unavailable_text"
            app:isw_inactive_tint_icon_left="#7E7E7E"
            app:isw_inactive_tint_icon_right="#7E7E7E"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/elsewhere_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/activity_horizontal_margin">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_info_24"
            android:layout_marginEnd="10dp"
            app:tint="@color/availability_elsewhere_text" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/availability_elsewhere_text"
            android:text="@string/availability_elsewhere_help"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/destination_label"
            style="@style/AccountTextInputLayoutStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/add_destination_title"
            android:textColor="@color/text_color"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/no_availability_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_network_connection"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/destination_label"/>

        <Spinner
            android:id="@+id/menu_availability_spinner"
            style="@style/AccountTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            app:layout_constraintTop_toBottomOf="@id/destination_label"/>

    </LinearLayout>

    <View style="@style/Divider" />

</LinearLayout>
