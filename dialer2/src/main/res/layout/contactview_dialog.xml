<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout 
    	android:orientation="vertical" 
    	android:padding="10.0dip" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content">
    	<RadioButton 
    		android:id="@+id/ContactViewDialogName" 
    		android:background="@drawable/bg_radio"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:button="@drawable/button_contact"
			android:onClick="onClick"
			android:text="contact name" android:lines="1" />
        <LinearLayout 
        	android:orientation="vertical"
			android:id="@+id/ContactViewDialogPhoneContainer"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />
		<RadioButton
			android:id="@+id/ContactViewDialogSpeedDial"
			android:background="@drawable/bg_radio"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:button="@drawable/button_speed_dial"
			android:onClick="onClick"
			android:text="@string/set_speed_dial" android:lines="1" android:visibility="gone"/>
    </LinearLayout>
</ScrollView>
